<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Active le prerendering statique -->
    <BlazorWasmPrerenderingBuild>true</BlazorWasmPrerenderingBuild>
    <BlazorWasmPrerenderingBasePath>/</BlazorWasmPrerenderingBasePath>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>full</TrimMode>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.6" PrivateAssets="all" />
    <PackageReference Include="BlazorWasmPrerendering.Build" Version="6.0.0" />
  </ItemGroup>

</Project>
